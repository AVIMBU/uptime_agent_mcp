{
  "name": "uptime-agent-mcp",
  "version": "0.0.1",
  "description": "MCP Server for uptime-agent.io",
  "license": "MIT",
  "type": "module",
  "homepage": "https://uptime-agent.io",
  "author": "AVIMBU",
  "bin": {
    "uptime-agent-mcp": "dist/index.js",
    "setup": "dist/setup-claude-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx cp setup-claude-server.js dist/ && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "setup": "npm install && npm run build && node setup-claude-server.js",
    "setup:debug": "npm install && npm run build && node setup-claude-server.js --debug"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "terminal",
    "claude",
    "ai",
    "uptime-monitoring"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/node": "^22"
  },
  "devDependencies": {
    "@types/node": "^22",
    "shx": "^0.3.4",
    "typescript": "^5.8.2"
  }
}